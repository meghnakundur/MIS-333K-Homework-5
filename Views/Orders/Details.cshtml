@model Kundur_Meghna_HW5.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
    </dl>
</div>
<h5>Products for this Order</h5>
<table class="table table-primary">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Extended Price</th>
    </tr>
    @foreach (OrderDetail rd in Model.OrderDetails)
    {
        <tr>
            <td>@Html.DisplayFor(ModelItem => rd.Product.ProductName)</td>
            <td>@Html.DisplayFor(ModelItem => rd.Price)</td>
            <td>@Html.DisplayFor(ModelItem => rd.Quantity)</td>
            <td>@Html.DisplayFor(ModelItem => rd.ExtendedPrice)</td>
        </tr>
    }
</table>
<h5>Order Summary</h5>
<table class="table table-sm table-bordered" style="width:30%">
    <tr>
        <th colspan="2" style="text-align:center">Registration Summary</th>
    </tr>
    <tr>
        <td>Order Subtotal:</td>
        <td>@Html.DisplayFor(model => model.OrderSubtotal)</td>
    </tr>
    <tr>
        <td>Tax Fee:</td>
        <td>@Html.DisplayFor(model => model.TaxFee)</td>
    </tr>
    <tr>
        <td>OrderTotal:</td>
        <td>@Html.DisplayFor(model => model.OrderTotal)</td>
    </tr>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>